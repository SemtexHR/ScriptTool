{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "(S)cripty",
  "version": "1.0.2",
  "identifier": "com.scripty.app",
  
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "(S)cripty",
        "width": 1000,
        "height": 650,
        "minHeight": 600,
        "minWidth": 993,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": null
    },
    "resources": ["lib/syspwsh.exe"]
  }
}
